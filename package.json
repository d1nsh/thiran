{
  "name": "thiran",
  "version": "0.1.0",
  "description": "AI-powered terminal coding assistant with multi-provider LLM support",
  "main": "dist/index.js",
  "bin": {
    "thiran": "./dist/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli/index.js",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "lint": "eslint src/",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "cli",
    "terminal",
    "llm",
    "openai",
    "anthropic",
    "gemini",
    "ollama"
  ],
  "author": "Dinesh Ramamurthy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d1nsh/thiran.git"
  },
  "homepage": "https://github.com/d1nsh/thiran#readme",
  "bugs": {
    "url": "https://github.com/d1nsh/thiran/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.52.0",
    "@google/generative-ai": "^0.24.1",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "glob": "^11.0.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-syntax-highlight": "^2.0.2",
    "ink-text-input": "^6.0.0",
    "openai": "^4.73.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.test.*",
    "!dist/__tests__",
    "!dist/binaries",
    "README.md",
    "LICENSE"
  ]
}
